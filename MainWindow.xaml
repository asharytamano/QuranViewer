<Window x:Class="QuranViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuranViewer"
        mc:Ignorable="d"
        Title="QuranViewer"
        Height="700"
        Width="1100"
        WindowStartupLocation="CenterScreen">


    <Window.Resources>
        <Style x:Key="LeftNavButton" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1F5A52"/>
            <Setter Property="BorderBrush" Value="#184842"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2B7A6D"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#2B7A6D"/>
                            </Trigger>

                            <!-- Pressed -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#15433C"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#15433C"/>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.45"/>
                            </Trigger>

                            <!-- Focused (keyboard tab) -->
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#6ED6C7"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LeftNavSubButton" TargetType="Button" BasedOn="{StaticResource LeftNavButton}">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="Padding" Value="18,7"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Background" Value="#194B45"/>
            <Setter Property="BorderBrush" Value="#153F3A"/>
        </Style>

        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT NAV -->
        <Border Grid.Column="0"
        Padding="12"
        BorderBrush="#DDD"
        BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Header + Surah selector -->
                    <RowDefinition Height="*"/>
                    <!-- Pages menu -->
                </Grid.RowDefinitions>

                <!-- TOP: Navigation + Surah selector -->
                <StackPanel Grid.Row="0">
                    <TextBlock Text="Navigation"
                       FontWeight="SemiBold"
                       FontSize="20"
                       Margin="0,0,0,12"/>

                    <TextBlock Text="Surah Index"
                       FontWeight="SemiBold"
                       FontSize="18"
                       Margin="0,0,0,6"/>

                    <ComboBox ItemsSource="{Binding SurahList}"
          DisplayMemberPath="Display"
          SelectedValuePath="Number"
          SelectedValue="{Binding SelectedSurah}"
          Height="32"
          FontSize="14"
          IsEditable="True"
          IsTextSearchEnabled="True"
          StaysOpenOnEdit="True"
          Margin="0,0,0,10"/>

                    <TextBlock Text="Tip: Select a Surah. Scroll on the right."
                       Opacity="0.7"
                       TextWrapping="Wrap"
                       Margin="0,0,0,10"/>

                </StackPanel>

                <Border Height="1"
        Background="#E6E6E6"
        Margin="0,10,0,6"/>

                <!-- BOTTOM: Pages menu (scrollable) -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>

                        <!-- These are the LEFT NAV pages from your earlier screenshot -->
                        <Button Style="{StaticResource LeftNavButton}" 
						Content="Introduction to the Qur'an Viewer"
                Margin="0,8,0,0" Height="38"
                Command="{Binding OpenPageWindowCommand}"
                CommandParameter="intro"/>

                        <Button Style="{StaticResource LeftNavButton}" Content="Software Features, Versioning"
                Margin="0,8,0,0" Height="38"
                Command="{Binding OpenPageWindowCommand}"
                CommandParameter="features"/>

                        <Expander Header="About" Margin="0,8,0,0" IsExpanded="True">
                            <StackPanel Margin="10,6,0,0">

                                <Button Style="{StaticResource LeftNavSubButton}" Content="The Developer, Ashary Tamano"
                        Margin="0,6,0,0" Height="36"
                        Command="{Binding OpenPageWindowCommand}"
                        CommandParameter="about_developer"/>

                                <Button Style="{StaticResource LeftNavSubButton}" Content="The Compiler, Abdulbasit Tamano"
                        Margin="0,6,0,0" Height="36"
                        Command="{Binding OpenPageWindowCommand}"
                        CommandParameter="about_compiler"/>

                                <Button Style="{StaticResource LeftNavSubButton}" Content="Visit maranaw.com"
                        Margin="0,6,0,0" Height="36"
                        Command="{Binding OpenLinkCommand}"
                        CommandParameter="https://maranaw.com"/>

                            </StackPanel>
                        </Expander>

                        <Button Style="{StaticResource LeftNavButton}" Content="Translation and Tafsir Explained"
                Margin="0,8,0,0" Height="38"
                Command="{Binding OpenPageWindowCommand}"
                CommandParameter="tafsir_explained"/>

                        <Button Style="{StaticResource LeftNavButton}" Content="Copyright and Distribution"
                Margin="0,8,0,0" Height="38"
                Command="{Binding OpenPageWindowCommand}"
                CommandParameter="copyright"/>

                        <Button Style="{StaticResource LeftNavButton}" Content="Compilation of the Holy Qur'an"
                Margin="0,8,0,0" Height="38"
                Command="{Binding OpenPageWindowCommand}"
                CommandParameter="compilation"/>

                        <Button Style="{StaticResource LeftNavButton}" Content="Memorizing the Holy Qur'an"
                Margin="0,8,0,0" Height="38"
                Command="{Binding OpenPageWindowCommand}"
                CommandParameter="memorizing"/>

                        <Button Style="{StaticResource LeftNavButton}" Content="Bookmarks"
                Margin="0,12,0,0" Height="38"
                Command="{Binding OpenPageWindowCommand}"
                CommandParameter="bookmarks"/>

                        <Button Style="{StaticResource LeftNavButton}" Content="Search"
                Margin="0,8,0,0" Height="38"
                Command="{Binding OpenPageWindowCommand}"
                CommandParameter="search"/>

                        <Button Style="{StaticResource LeftNavButton}" Content="Exit"
                Margin="0,12,0,0" Height="38"
                Command="{Binding ExitCommand}"/>

                        <!-- small bottom breathing space -->
                        <Border Height="12" Opacity="0"/>

                    </StackPanel>
                </ScrollViewer>


            </Grid>
        </Border>

        <!-- RIGHT READER -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ===================== HEADER: SURAH MODE (SHOW ONCE) ==================== -->
            <Border Grid.Row="0"
            Margin="10,10,10,12"
            Padding="18"
            CornerRadius="14"
            Background="#0E3B2E"
            Visibility="{Binding IsSurahMode, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding SelectedSurahTitle}"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="White"
                       TextAlignment="Center"/>

                    <TextBlock Text="{Binding SelectedSurahSubtitle}"
                       Margin="0,8,0,0"
                       FontSize="13"
                       Foreground="White"
                       Opacity="0.90"
                       TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- ===================== HEADER: PAGE MODE (SHOW ONCE) ==================== -->
            <Border Grid.Row="0"
            Margin="10,10,10,12"
            Padding="18"
            CornerRadius="14"
            Background="#0E3B2E"
            Visibility="{Binding IsPageMode, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding SelectedPageTitle}"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="White"
                       TextAlignment="Center"/>

                    <TextBlock Text="{Binding SelectedPageSubtitle}"
                       Margin="0,8,0,0"
                       FontSize="13"
                       Foreground="White"
                       Opacity="0.90"
                       TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- AYAH LIST (ONLY THIS SCROLLS) -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding FilteredAyat}">
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="10"
        Padding="14"
        CornerRadius="6"
        BorderBrush="#E0E0E0"
        BorderThickness="1"
        HorizontalAlignment="Stretch"
        FlowDirection="LeftToRight">

                                <Grid HorizontalAlignment="Stretch">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Ayah header -->
                                    <TextBlock Grid.Row="0"
               Text="{Binding AyahHeader}"
               FontSize="12"
               Opacity="0.65"
               Margin="0,0,0,8"/>

                                    <!-- Arabic (RTL island, card remains LTR) -->
                                    <Border Grid.Row="1"
        HorizontalAlignment="Stretch">
                                        <TextBlock Text="{Binding Data.QuranText}"
           Language="ar-SA"
           FontFamily="pack://application:,,,/Assets/Fonts/#Amiri"
           FontSize="28"
           TextWrapping="Wrap"
           FlowDirection="LeftToRight"
		   TextAlignment="Right"
		   HorizontalAlignment="Right"
           Margin="0,0,0,8">

                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <!-- Default for normal ayahs: keep your original look -->
                                                    <Setter Property="TextAlignment" Value="Right"/>
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>

                                                    <Style.Triggers>
                                                        <!-- Ayah 0 (Bismillah): center -->
                                                        <DataTrigger Binding="{Binding Data.Ayah}" Value="0">
                                                            <Setter Property="TextAlignment" Value="Center"/>
                                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                    </Border>

                                    <!-- Maranao translation -->

                                    <TextBlock Grid.Row="2"
           FlowDirection="LeftToRight"
           TextAlignment="Left"
           Text="{Binding Data.MaranaoTranslation}"
           FontSize="16"
           TextWrapping="Wrap"
           Margin="0,10,0,0"/>

                                    <!-- Tafsir toggle -->
                                    <Button Grid.Row="3"
        Margin="0,10,0,0"
        Width="90"
        HorizontalAlignment="Left"
        FlowDirection="LeftToRight"
        Content="{Binding TafsirButtonText}"
        Visibility="{Binding IsShowToggleVisible,
                             Converter={StaticResource BoolToVisibilityConverter}}"
        Command="{Binding DataContext.ToggleTafsirCommand,
                          RelativeSource={RelativeSource AncestorType=Window}}"
        CommandParameter="{Binding}" />

                                    <!-- Tafsir panel -->
                                    <Border Grid.Row="4"
            Margin="0,8,0,0"
            Padding="10"
            BorderBrush="#F0F0F0"
            BorderThickness="1"
            Visibility="{Binding IsTafsirVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="{Binding Data.TafsirTextOriginal}"
                   TextWrapping="Wrap"
                   FontSize="14"/>
                                    </Border>
                                </Grid>

                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
