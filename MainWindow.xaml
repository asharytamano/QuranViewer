<Window x:Class="QuranViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuranViewer"
        mc:Ignorable="d"
        Title="QuranViewer"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen">


    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT NAV -->
        <Border Grid.Column="0" 
                Padding="12" 
                BorderBrush="#DDD" 
                BorderThickness="0,0,1,0">
            <StackPanel>
                <TextBlock Text="Navigation" 
                           FontWeight="SemiBold" 
                           FontSize="18" 
                           Margin="0,0,0,12"/>

                <TextBlock Text="Surah Index" 
                           FontWeight="SemiBold" 
                           FontSize="16" 
                           Margin="0,0,0,6"/>
                <ComboBox ItemsSource="{Binding SurahList}"
          DisplayMemberPath="Display"
          SelectedValuePath="Number"
          SelectedValue="{Binding SelectedSurah}"
          Height="30"
          Margin="0,0,0,18"/>

                <TextBlock Text="Tip: Select a Surah. Scroll on the right." Opacity="0.7" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- RIGHT READER -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ===================== HEADER: SURAH MODE (SHOW ONCE) ==================== -->
            <Border Grid.Row="0"
            Margin="10,10,10,12"
            Padding="18"
            CornerRadius="14"
            Background="#0E3B2E"
            Visibility="{Binding IsSurahMode, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding SelectedSurahTitle}"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="White"
                       TextAlignment="Center"/>

                    <TextBlock Text="{Binding SelectedSurahSubtitle}"
                       Margin="0,8,0,0"
                       FontSize="13"
                       Foreground="White"
                       Opacity="0.90"
                       TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- ===================== HEADER: PAGE MODE (SHOW ONCE) ==================== -->
            <Border Grid.Row="0"
            Margin="10,10,10,12"
            Padding="18"
            CornerRadius="14"
            Background="#0E3B2E"
            Visibility="{Binding IsPageMode, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding SelectedPageTitle}"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="White"
                       TextAlignment="Center"/>

                    <TextBlock Text="{Binding SelectedPageSubtitle}"
                       Margin="0,8,0,0"
                       FontSize="13"
                       Foreground="White"
                       Opacity="0.90"
                       TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- AYAH LIST (ONLY THIS SCROLLS) -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding FilteredAyat}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="10"
                            Padding="14"
                            CornerRadius="6"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                                <StackPanel>
                                    <!-- Ayah header -->
                                    <TextBlock Text="{Binding AyahHeader}"
                                       FontSize="12"
                                       Opacity="0.65"
                                       Margin="0,0,0,8"/>

                                    <!-- Arabic -->
                                    <TextBlock FontFamily="pack://application:,,,/Assets/Fonts/#Amiri"
                                       Text="{Binding Data.QuranText}"
                                       FontSize="28"
                                       TextAlignment="Right"
                                       FlowDirection="RightToLeft"
                                       TextWrapping="Wrap" />

                                    <!-- Maranao translation -->
                                    <TextBlock Margin="0,10,0,0"
                                       Text="{Binding Data.MaranaoTranslation}"
                                       FontSize="16"
                                       TextWrapping="Wrap" />

                                    <!-- Tafsir toggle button -->
                                    <Button Margin="0,10,0,0"
                                    Width="90"
                                    HorizontalAlignment="Left"
                                    Content="{Binding TafsirButtonText}"
                                    Command="{Binding DataContext.ToggleTafsirCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}" />

                                    <!-- Tafsir panel -->
                                    <Border Margin="0,8,0,0"
                                    Padding="10"
                                    BorderBrush="#F0F0F0"
                                    BorderThickness="1"
                                    Visibility="{Binding IsTafsirVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="{Binding Data.TafsirTextOriginal}"
                                           TextWrapping="Wrap"
                                           FontSize="14"/>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
